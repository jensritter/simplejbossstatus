<persistence xmlns="http://java.sun.com/xml/ns/persistence"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://java.sun.com/xml/ns/persistence http://java.sun.com/xml/ns/persistence/persistence_1_0.xsd"
	version="1.0">
	<!--
	name = sollte auf "PU" enden - damit man den und den JNDI - Namen unterscheiden kann.

	transaction-type
		RESOURCE_LOCAL		lokale Anwendung 
		JTA					Verweis auf Container-Datasource
		
	jta-data-source ( wenn Container dann auch keine hibernate.connection-Properties )
		JNDI-Name ( jdbc/foto )   
		jboss		java:/jdbc/foto ( sofern use-java-context nicht verÃ¤ndert wurde ) 
		glassfish 	jdbc/foto
	
	 -->
	<persistence-unit name="datenbankPU" transaction-type="RESOURCE_LOCAL">
		<provider>org.hibernate.ejb.HibernatePersistence</provider>
		<!--  <jta-data-source>jdbc/foto</jta-data-source>  -->
		
		<!-- 
		<class>org.jens.</class>
	    <exclude-unlisted-classes>true</exclude-unlisted-classes>
		 -->
		<properties>
			<property name="hibernate.connection.driver_class" value="org.postgresql.Driver" />
			<property name="hibernate.connection.url" value="jdbc:postgresql://matrix/DATENBANK" />
			<property name="hibernate.connection.username" value="hacker" />
			<property name="hibernate.connection.password" value="linux" />
			<property name="hibernate.dialect" value="org.hibernate.dialect.PostgreSQLDialect" />
			
			<!--  create, update, create-drop,validate -->
			<property name="hibernate.hbm2ddl.auto" value="update" />
			<!--  true/false -->
			<property name="hibernate.show_sql" value="false" />
			<!--  UTF-8  -->
			<property name="hibernate.connection.useUnicode" value="true" />
			<property name="hibernate.connection.charSet" value="UTF-8" />
			<property name="hibernate.connection.characterEncoding" value="UTF-8" />
			<!--  C3P0  - Needs org.hibernate hibernate-c3p0(3.3.1.GA) dependency -->
			<!-- 
			<property name="hibernate.connection.provider_class" value="org.hibernate.connection.C3P0ConnectionProvider" />
			<property name="c3p0.acquire_increment" value="1" />
			<property name="c3p0.idle_test_period" value="100" />
			<property name="c3p0.initialPoolSize" value="10" />
			<property name="c3p0.min_size" value="15" />
			<property name="c3p0.max_size" value="50"/>
			<property name="c3p0.timeout" value="1800" />
			 -->
			<!--  Cache -->
			<property name="hibernate.cache.provider_class" value="net.sf.ehcache.hibernate.EhCacheProvider" />
			<property name="hibernate.cache.use_second_level_cache" value="true" /> 
		</properties>
	</persistence-unit>
</persistence>